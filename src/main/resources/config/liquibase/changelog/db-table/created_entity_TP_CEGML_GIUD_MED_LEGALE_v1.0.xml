            <column name="CEGML_DESCRIZIONE_GML" remarks="Descrizione estesa del gml" type="VARCHAR2(350 BYTE)"/>
            <column defaultValueComputed="TO_DATE ('0001-01-01','YYYY-MM-DD')" name="CEGML_DATA_INIZ" remarks="Data inizio validità del gml" type="date"/>
            <column defaultValueComputed="TO_DATE ('9999-12-31','YYYY-MM-DD')" name="CEGML_DATA_FINE" remarks="Data fine validità del gml)" type="date"/>
            <column name="CEGML_COD_ASP" remarks="Codice Aspettativa (461,266)" type="VARCHAR2(3 BYTE)"/>
