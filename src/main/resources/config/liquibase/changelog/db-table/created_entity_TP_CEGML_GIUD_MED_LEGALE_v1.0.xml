            <column defaultValueComputed="Current_timestamp" name="CEGML_DATA_INS" remarks="Data inserimento del record" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="Current_timestamp" name="CEGML_DATA_ULT_AGG" remarks="Data ultimo aggiornamento del record" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column defaultValue="LOAD INIT" name="CEGML_COD_ULT_AGG" remarks="Codice dell'utente/funzione che ha aggiornato il record" type="VARCHAR2(50 BYTE)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="LISTA_GML1" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="LISTA_GML2" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="insert_TP_CEGML_GIUD_MED_LEGALE_v1.0-data" author="m.kerabandi">
        <loadData
                file="config/liquibase/changelog/data/tp_cegml_giud_med_legale.csv"
