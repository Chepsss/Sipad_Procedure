    <changeSet id="created_entity_TP_CEGML_GIUD_MED_LEGALE_v1.0" author="m.kerabandi">
        <createTable tableName="TP_CEGML_GIUD_MED_LEGALE">
            <column name="CEGML_COD_PK" remarks="Codice del giudizio medico legale" type="VARCHAR2(12 BYTE)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="TP_CEGML_GIUD_MED_LEGALE_PK"/>
            </column>
